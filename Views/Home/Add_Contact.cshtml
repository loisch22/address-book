@{
  Layout = "_Layout";
}

<h1>Add a New Contact</h1>

<form action="/recent_added_contact" method="post">
  <div class="form-group">
    <label for="contact-name">Name:</label>
    <input id="contact-name" name="contact-name" type="text" class="form-control">
  </div>
  <div class="form-group">
    <label for="phone-number">Phone Number:</label>
    <input id="phone-number" name="phone-number" type="text" class="input-medium bfh-phone" data-format="ddd-ddd-dddd">
    <span class="example-number"><em>(Ex. 000-000-0000)</em></span>
  </div>
  <div class="form-group">
    <label for="address">Street Address:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address">City:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address">State:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address">Zip Code:</label>
    <input id="address" name="address" type="text" class="form-control">
  </div>
  <button class="btn btn-default">Add Contact</button>
</form>
