@{
  Layout = "_Layout";
}

<h1>Address Book</h1>

<div class="container">
  <h2>Add a New Contact</h2>
  <form action="/contact/new" method="post">
    <div class="well form-well">
      <div class="form-group form-add">
        <label for="contact-name" class="labels">Name:</label>
        <input id="contact-name" name="contact-name" type="text" class="form-control">
      </div>
      <div class="form-group form-add">
        <label for="phone-number" class="labels">Phone Number:</label>
        <input id="phone-number" name="phone-number" type="text" class="input-medium bfh-phone" data-format="ddd-ddd-dddd">
        <span class="example-number"><em>(Ex. 000-000-0000)</em></span>
      </div>
      <div class="form-group form-add">
    <label for="address" class="labels">Street Address:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address" class="labels">City:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address" class="labels">State:</label>
    <input id="address" name="address" type="text" class="form-control">
    <label for="address" class="labels">Zip Code:</label>
    <input id="address" name="address" type="text" class="form-control">
  </div>
    </div>
  <button class="btn btn-default add-new">Add Contact</button>
</form>

  <a href="/"><button class="btn btn-default exit">Cancel</button></a>

</div>
